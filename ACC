-- Auto Accept Trade Script (Tanpa GUI, Langsung Aktif)

-- Fungsi aman untuk panggil remote
local function fireSafe(remote, ...)
    if remote and remote:IsA("RemoteEvent") then
        pcall(function()
            remote:FireServer(...)
        end)
    end
end

-- Loop langsung aktif
spawn(function()
    while true do
        wait(1) -- Interval waktu antar eksekusi, bisa dikurangi jadi 0.5 jika ingin lebih cepat

        local events = game:GetService("ReplicatedStorage"):FindFirstChild("GameEvents")
        if events then
            fireSafe(events:FindFirstChild("FriendGiftEvent"))
            fireSafe(events:FindFirstChild("PetGiftingService"))
            fireSafe(events:FindFirstChild("GiftPet"))
            fireSafe(events:FindFirstChild("AcceptPetGift"))
        end
    end
end)
